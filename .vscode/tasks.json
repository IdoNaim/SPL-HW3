{
    "tasks": [
        {
            "type": "shell",
            "label": "make StompWCIClient",
            "command": "make",
            "args": ["StompWCIClient"],
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "type": "shell",
            "label": "make EchoClient",
            "command": "make",
            "args": ["EchoClient"],
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "type": "shell",
            "label": "mvn compile",
            "command": "mvn",
            "args": ["compile"],
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        },
        {
            "label": "Build C++2",
            "type": "shell",
            "command": "g++",
            "args": [
              "-g",                               // Debugging symbols
              "src/StompClient.cpp",              // Main source file
              "src/event.cpp",                    // Other source files
              "src/keyboardInput.cpp",
              "src/ConnectionHandler.cpp",
              "src/StompProtocol.cpp",
              "-o",                               // Output executable
              "bin/StompClient.exe",
              "-Iinclude",                        // Include directory for header files
              "-pthread",                         // Link pthread library
              "-lboost_system"                    // Link Boost system library
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build C++ project with MinGW"
          },
          {
          "type": "shell",
          "label": "make C++",
          "command": "make",
          "args": ["all"],
          "options": {
              "cwd": "${workspaceFolder}/client"
          }
        }
    ],
    "version": "2.0.0"
}