{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ (GDB/MinGW)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/StompClient.exe", // Path to the executable
            "args": [],               // Add any command-line arguments for your program if needed
            "stopAtEntry": false,     // Start debugging without pausing at entry
            "cwd": "${workspaceFolder}", // Set the working directory
            "environment": [],
            "externalConsole": true,  // Use an external console for I/O
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe", // Path to GDB (MinGW provides this in its bin directory)
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
          }
        ,
        {
            "type": "java",
            "name": "StompServer",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.stomp.StompServer",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "test",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.stomp.test",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "NewsFeedServerMain",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.newsfeed.NewsFeedServerMain",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "NewsFeedClientMain",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.newsfeed.NewsFeedClientMain",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "EchoClient",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.echo.EchoClient",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "Launch EchoServer",
            "request": "launch",
            "mainClass": "bgu.spl.net.impl.echo.EchoServer",
            "projectName": "server",
            "preLaunchTask": "mvn compile"
        },
        {
            "name": "(gdb) Launch stomp client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/client/bin/StompWCIClient",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make StompWCIClient"
        },
        {
            "name": "(gdb) Launch echo client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/client/bin/EchoClient",
            "args": [
                "127.0.0.1",
                "7777"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make EchoClient"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}